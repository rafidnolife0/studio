
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@banglashop.com';
    }

    // Products Collection
    match /products/{productId} {
      // Anyone can read products
      allow read: if request.auth != null;
      // Only admin can create, update, delete products
      allow write: if isAdmin();
    }

    // Users Collection
    match /users/{userId} {
      // Admin can read all user documents.
      // Authenticated users can read their own document.
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      // Authenticated users can create their own document (e.g., on registration).
      // Admin can also create user documents if needed (though typically user creates their own).
      allow create: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      // Authenticated users can update their own document.
      // Admin can update any user document.
      allow update: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      // Only admin can delete user documents (be cautious with this).
      allow delete: if isAdmin();
    }

    // Orders Collection
    match /orders/{orderId} {
      // Admin can read all orders.
      // Authenticated users can read their own orders.
      allow read: if isAdmin() || (request.auth != null && request.resource.data.userId == request.auth.uid);
      // Authenticated users can create their own orders.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Only admin can update orders (e.g., change status).
      // Users should not be able to update their own orders after placement.
      allow update: if isAdmin();
      // Only admin can delete orders.
      allow delete: if isAdmin();
    }

    // Default deny all other paths for security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
