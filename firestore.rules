
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Products collection
    // Allow anyone to read products
    // Allow only authenticated admins (admin@banglashop.com) to write (create, update, delete) products
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@banglashop.com';
    }

    // Example for user-specific data in the future (e.g., user profiles, individual orders)
    // match /users/{userId}/{document=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }

    // Example for orders collection in the future
    // match /orders/{orderId} {
    //   // Allow authenticated users to create their own orders
    //   allow create: if request.auth != null;
    //   // Allow users to read their own orders, and admins to read any order
    //   allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.email == 'admin@banglashop.com');
    //   // Allow only admins to update/delete orders (e.g., change status)
    //   allow update, delete: if request.auth != null && request.auth.token.email == 'admin@banglashop.com';
    // }
  }
}
